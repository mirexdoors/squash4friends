{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "allowTemplateLiterals": true,
        "quotes": ["error", "backtick", { "avoidEscape": true }],
        "function-paren-newline": ["error", "consistent"]
    }
}